.calendar{
	width: 100%;
}
.calendar .tit{
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 36rpx;
	color: #2A2A2A;
	padding: 50rpx 0 10rpx;
}
.calendar .tit .current{
	margin: 0 40rpx;
}
.calendar .content{
	display: flex;
	flex-wrap: wrap;
	box-sizing: border-box;
	padding: 10rpx 20rpx 50rpx;
}
.calendar .content view{
	width: 13%;
	height: 50rpx;
	line-height: 40rpx;
	text-align: center;
	flex-shrink: 0;
	font-size: 36rpx;
	color: #2A2A2A;
	/* background: rgb(224, 199, 199); */
	margin: 4rpx 4rpx;
}
.calendar .content .gray{
	color: #999;
}

.calendar .content .remark{
	font-size: 18rpx;
}

.calendar .content .selected{
  background-color: #39b54a;
  color: white;
}